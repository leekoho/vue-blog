// Font Face

$font-family-chinese      = "Source Sans Pro", "PingFang SC", "Microsoft YaHei", Arial
$font-family-base         = $font-family-chinese, sans-serif

$font-family-code         = consolas, Menlo, "PingFang SC", "Microsoft YaHei", monospace;


// Font Size
$font-size-base           = 14px
$font-size-small          = $font-size-base - 2px
$font-size-smaller        = $font-size-base - 4px
$font-size-large          = $font-size-base + 2px
$font-size-larger         = $font-size-base + 4px
$font-size-max            = $font-size-base + 12px

$font-size-code           = 13px

// Color
$dark = #34495e
$vue  = #42b983
$gray = #999

// Width Or Height
$body-width       = 860px
$header-height    = 80px
$footer-height    = 60px
