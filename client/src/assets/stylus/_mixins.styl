the-transition() {
  transition-duration: 0.2s;
  transition-timing-function: ease-in-out;
  transition-delay: 0s;
}

clearfix() {
  &:before,
  &:after {
    content: " ";
    display: table;
  }
  &:after { clear: both; }
}

// fitts定律
fitts($val)
  position: relative
  &:before
    content: ''
    position: absolute
    top: - $val
    right: - $val
    bottom: - $val
    left: - $val
